{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "args": [
                "a.txt",
                "b.txt"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "dependsOn": "build",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}