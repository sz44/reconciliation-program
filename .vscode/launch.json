{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}",  // Specify the built executable
            "args": ["a.txt", "b.txt"],               // Arguments to pass to the program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",              // Working directory
            "environment": [],
            "externalConsole": false,                 // Set to true if you want to use an external terminal
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++-11 build active file",                 // Ensure it builds before running
            "miDebuggerPath": "/usr/bin/gdb",         // Path to GDB, change if necessary
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
